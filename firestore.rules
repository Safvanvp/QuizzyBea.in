rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Leaderboard — any authenticated user can read all entries.
    // Writing happens from the app after quiz completion.
    match /leaderboard/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // User profiles — only the owner can write their own document.
    // Any authenticated user can READ for profile display.
    match /users/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == uid;

      // Quiz history is private to the owner only.
      match /quizHistory/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
    }
  }
}
